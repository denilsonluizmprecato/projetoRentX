    "paths": {
        "/categories": {
            "post": {
                "tags": ["Category"],
                "summary": "Create a Category",
                "description": "Create a New Category",
                "requestBody": {
                    "content": {
                        "aplication/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "exemple": {
                                    "name": "category name sample",
                                    "description": "category description"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Category Already Exists"
                    }
                }
            },
            "get": {
                "tag": ["Category"],
                "summary": "List all Categories",
                "description": "List all Categories",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}